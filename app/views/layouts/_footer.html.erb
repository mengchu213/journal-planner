<%= content_tag :footer, class: "fixed bg-white shadow dark:bg-sky-800 bottom-0 left-0 right-0" do %>
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <%= link_to "#", class: "flex items-center mb-4 sm:mb-0" do %>
                <%= image_tag("logo.svg", class: "h-8 mr-3", alt: " Logo") %>
                <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white text-white 
          hover:text-blue-300 transition-colors">Journal-Planner</span>
            <% end %>
            <ul class="flex flex-wrap items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400">
                <li>
                    <%= link_to "About", "#", class: "mr-4 hover:underline md:mr-6  text-white 
          hover:text-blue-300 transition-colors" %>
                </li>
                <li>
                    <%= link_to "Privacy Policy", "#", class: "mr-4 hover:underline md:mr-6 text-white 
          hover:text-blue-300 transition-colors" %>
                </li>
                <li>
                    <%= link_to "Licensing", "#", class: "mr-4 hover:underline md:mr-6  text-white 
          hover:text-blue-300 transition-colors" %>
                </li>
                <li>
                    <%= link_to "Contact", "#", class: "hover:underline text-white 
          hover:text-blue-300 transition-colors" %>
                </li>
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-900 lg:my-8" />
        <span class="block text-sm text-gray-500 sm:text-center text-white 
           transition-colors">© 2023 <%= link_to "Journal-Planner™", "#", class: "hover:underline" %>. All Rights Reserved.</span>
    </div>
<% end %>
