
<div class="container mx-auto  py-6 bg-blue-400 min-h-screen max-w-full ">
  <div class="flex flex-wrap -mx-4 ">
    <div class="mx-auto w-full lg:w-1/2 px-4 ">

      <div class="flex flex-col mb-8 bg-white rounded shadow p-6">
        <div class="flex justify-between items-start">
          <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @category.name %></h1>
          <% if current_user %>
            <div class="flex items-center space-x-2">
              <%= link_to "<i class='fas fa-edit'></i>".html_safe, edit_category_path(@category), class: "text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 shadow-lg shadow-blue-500/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
              <%= link_to "<i class='fas fa-trash'></i>".html_safe, category_path(@category), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 shadow-lg shadow-red-500/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
            </div>
          <% end %>
        </div>
        <p class="text-xl text-gray-600"><%= @category.description %></p>
        <div class="bg-white rounded">
          <div class="flex space-x-2 justify-between items-start pt-10">
           <h2><%= link_to "List of Tasks", category_tasks_path(@category), class: "text-2xl font-bold text-blue-700 mb-4 " %></h2>
             <%= turbo_frame_tag 'new_task' do %>
            <% if current_user %>
            <%= turbo_frame_tag 'new_task' do %>
              <div class="flex items-center justify-between mb-6">
                <%= link_to "New Task!", new_category_task_path(@category), class: "text-gray-900 bg-gradient-to-r from-lime-200 via-lime-400 to-lime-500 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-lime-300 shadow-lg shadow-lime-500/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
              </div>
              <% end %>
            <% end %>
          </div>
          <% end %>
          <%= turbo_frame_tag 'tasks_frame' do %>
        <%= render 'tasks/tasks', tasks: @tasks, category: @category %>
        <% end %>

    </div>
  </div>
</div>
