<section class="movie-details bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <div class="details">
    <h1 class="text-3xl font-bold text-gray-700"><%= @category.name %></h1>
    <h2 class="text-xl text-gray-500">
      <%= @category.description %> &bull; <%= @category.description %>
    </h2>
    <p class="text-gray-600">
      <%= @category.description %>
    </p>
    <table class="table-auto">
      <tr class="border-t border-gray-200">
        <th class="px-4 py-2 text-left text-gray-500">Total Gross:</th>
        <td class="px-4 py-2 text-left text-gray-700"><%= @category.description %></td>
      </tr>
    </table>
  </div>
</section>
<section class="admin py-4">
  <%= link_to "Edit", edit_category_path(@category), class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  <%= link_to "Delete", category_path(@category), class: "inline-block ml-2 bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline",
  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</section>
