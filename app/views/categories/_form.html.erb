<%= render "shared/errors", object: category %>

<%= form_with(model: @category, local: false, data: { turbo: "false" }, class: 'mt-8 space-y-6') do |f| %>
  <%= render "shared/errors", object: @category %>

  <div class="rounded-md shadow-sm -space-y-px">
    <div>
      <%= f.label :name, class: "sr-only" %>
      <%= f.text_field :name, autofocus: true, required: true, placeholder: "Category Name", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :description, class: "sr-only" %>
      <%= f.text_area :description, required: true, placeholder: "Category Description", class: "appearance-none rounded-none relative block w-full px-3 py-6 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.submit (@category.persisted? ? "Update Category" : "Create Category"), class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>